@model TaskManagement_02.Models.UserModel

@{
    ViewData["Title"] = "My Profile";
}

<h2 class="mb-3">My Profile</h2>

<div class="card mb-4">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Role</dt>
            <dd class="col-sm-9">@Model.Role</dd>

            <dt class="col-sm-3">Designation</dt>
            <dd class="col-sm-9">@Model.Designation</dd>

            <dt class="col-sm-3">Department</dt>
            <dd class="col-sm-9">@Model.Department</dd>
        </dl>

        <div class="mt-3">
            <a asp-action="SignUp" asp-controller="User" class="btn btn-outline-primary me-2">Edit Profile</a>
            <a asp-action="ChangePassword" asp-controller="User" class="btn btn-outline-secondary">Change Password</a>
        </div>
    </div>
</div>